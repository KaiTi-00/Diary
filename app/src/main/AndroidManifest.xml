<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diary">

    <application
        android:allowBackup="true"
        android:icon="@drawable/daily_image"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.example.diary.ui.addDiary.AddDiaryActivity"></activity>
        <activity android:name="com.example.diary.ui.login.RegisterActivity" />
        <activity android:name="com.example.diary.ui.login.ResetPasswordActivity" />
        <activity android:name="com.example.diary.ui.login.LoginActivity" />
        <activity android:name="com.example.diary.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>