<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diary.ui.login.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="46sp"
        android:textStyle="bold|italic"
        android:textColor="@color/crucial"
        android:layout_above="@id/edt_email_sinup"
        android:layout_margin="30dp"/>

        <EditText
            android:id="@+id/edt_email_sinup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/edt_password_signup"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_field"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/black"/>

        <EditText
            android:id="@+id/edt_password_signup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/input_field"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/black"/>
    <EditText
        android:id="@+id/edt_confirmPassword_signup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/edt_password_signup"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:background="@drawable/input_field"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/black"/>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Sign up"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:layout_below="@+id/edt_confirmPassword_signup"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need help?"
        android:textColor="@color/crucial"
        android:textSize="26dp"
        android:layout_below="@id/edt_confirmPassword_signup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"/>
    <ImageView
        android:id="@+id/img_back_signup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <ProgressBar
        android:id="@+id/progressBar_regis"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:indeterminate="true"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-4dp"
        android:visibility="visible"/>
</RelativeLayout>